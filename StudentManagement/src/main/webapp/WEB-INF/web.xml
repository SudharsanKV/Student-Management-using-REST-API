    <description></description>
    <display-name>ListofStudents</display-name>
    <servlet-name>ListofStudents</servlet-name>
    <servlet-class>com.sms.StudentManagement.ListofStudents</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListofStudents</servlet-name>
    <url-pattern>/listof</url-pattern>
  </servlet-mapping> -->
</web-app>